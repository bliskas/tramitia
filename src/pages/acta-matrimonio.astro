import BaseLayout from '../layouts/BaseLayout.astro';
import { getServiceSchema, getFAQSchema, getBreadcrumbSchema, getHowToSchema } from '../lib/seo';

// FAQs para schema y sección visible
const faqs = [
  {
    question: '¿Para qué necesito el acta de matrimonio apostillada en España?',
    answer: 'El acta de matrimonio apostillada es necesaria para múltiples trámites en España: reagrupación familiar del cónyuge, solicitud de nacionalidad española por matrimonio, inscripción del matrimonio en el Registro Civil español, pensiones de viudedad, herencias y trámites de Seguridad Social. Sin la Apostilla de La Haya, las autoridades españolas no reconocen su validez.',
  },
  {
    question: '¿Puedo usar el acta de matrimonio para obtener la nacionalidad española?',
    answer: 'Sí. El matrimonio con un ciudadano español es una de las vías para obtener la nacionalidad con solo 1 año de residencia legal en España (frente a los 2 años para iberoamericanos o 10 para otros extranjeros). El acta de matrimonio apostillada es el documento clave para acreditar el vínculo.',
  },
  {
    question: '¿Cuánto tarda obtener un acta de matrimonio apostillada?',
    answer: 'El plazo varía según el país: Venezuela entre 20 y 40 días hábiles, Argentina entre 15 y 30 días, Colombia entre 15 y 25 días. El tiempo depende de la localidad donde se registró el matrimonio y la carga de trabajo de la autoridad apostilladora.',
  },
  {
    question: '¿El acta de matrimonio tiene fecha de caducidad?',
    answer: 'El acta de matrimonio como documento no caduca, ya que acredita un hecho registral permanente. Sin embargo, algunas autoridades españolas pueden exigir que el documento tenga una antigüedad máxima de 6 meses. Recomendamos solicitar un acta reciente para evitar problemas.',
  },
  {
    question: '¿Necesito traducción jurada del acta de matrimonio?',
    answer: 'Si el acta de matrimonio está en castellano, generalmente no necesitas traducción jurada para trámites en España. Si el documento contiene textos en otros idiomas o si la autoridad lo requiere, sí será necesaria una traducción jurada oficial.',
  },
  {
    question: '¿Puedo inscribir mi matrimonio extranjero en España?',
    answer: 'Sí. Si al menos uno de los cónyuges es español o tiene residencia legal en España, el matrimonio celebrado en el extranjero puede inscribirse en el Registro Civil español. Para ello necesitarás el acta de matrimonio apostillada, partidas de nacimiento apostilladas y otros documentos según tu caso.',
  },
];

// Schema.org
const serviceSchema = getServiceSchema({
  name: 'Acta de Matrimonio Apostillada',
  description: 'Obtenemos tu acta de matrimonio apostillada desde Venezuela, Argentina, Colombia, Ecuador, Perú o Bolivia. Gestión completa desde España.',
  deliveryTime: 'P30D',
  slug: 'acta-matrimonio',
});

const faqSchema = getFAQSchema(faqs);

const breadcrumbSchema = getBreadcrumbSchema([
  { name: 'Inicio', url: '/' },
  { name: 'Gestión de documentos', url: '/gestion-documentos/' },
  { name: 'Acta de matrimonio', url: '/acta-matrimonio/' },
]);

const howToSchema = getHowToSchema({
  name: 'Cómo obtener tu acta de matrimonio apostillada desde España',
  description: 'Proceso paso a paso para solicitar y recibir tu acta de matrimonio apostillada desde cualquier país de Latinoamérica sin moverte de España.',
  totalTime: 'P30D',
  steps: [
    {
      name: 'Cuéntanos tu caso',
      text: 'Indícanos el país y la ciudad donde se celebró tu matrimonio, y para qué trámite necesitas el acta. Presupuesto en 24 horas.',
    },
    {
      name: 'Obtenemos y apostillamos',
      text: 'Nuestro equipo solicita el acta de matrimonio en el Registro Civil correspondiente y tramita la Apostilla de La Haya.',
    },
    {
      name: 'Entrega en España',
      text: 'Recibes el acta de matrimonio original apostillada en tu domicilio en España por mensajería segura.',
    },
  ],
});
