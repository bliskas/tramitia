---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

// Obtener posts de Content Collections (no borradores)
const allPosts = await getCollection('blog', ({ data }) => !data.draft);
// Ordenar por fecha de publicación (más recientes primero)
const posts = allPosts.sort((a, b) =>
  new Date(b.data.publishedDate).getTime() - new Date(a.data.publishedDate).getTime()
);

const categories = [
  { value: 'apostillas', label: 'Apostillas' },
  { value: 'documentos', label: 'Documentos' },
  { value: 'tramites', label: 'Trámites' },
  { value: 'guias', label: 'Guías' },
  { value: 'noticias', label: 'Noticias' },
];

// Schema.org para la página del blog
const blogSchema = {
  '@context': 'https://schema.org',
  '@type': 'Blog',
  name: 'Blog de Tramitia',
  description: 'Guías, consejos y noticias sobre apostillas y legalización de documentos latinoamericanos en España',
  url: 'https://tramitia.es/blog/',
  publisher: {
    '@type': 'Organization',
    name: 'Tramitia',
    logo: {
      '@type': 'ImageObject',
      url: 'https://tramitia.es/logo.png',
    },
  },
};

const breadcrumbSchema = {
  '@context': 'https://schema.org',
  '@type': 'BreadcrumbList',
  itemListElement: [
    {
      '@type': 'ListItem',
      position: 1,
      name: 'Inicio',
      item: 'https://tramitia.es/',
    },
    {
      '@type': 'ListItem',
      position: 2,
      name: 'Blog',
      item: 'https://tramitia.es/blog/',
    },
  ],
};
---

<BaseLayout
  title="Blog | Guías de Apostillas y Documentos - Tramitia"
  description="Información útil sobre apostillas, legalización de documentos y trámites para latinoamericanos en España. Guías paso a paso y consejos prácticos."
  keywords={['apostilla blog', 'guías apostilla', 'documentos latinoamerica', 'legalización españa']}
>
  <Fragment slot="schema">
    <script type="application/ld+json" set:html={JSON.stringify(blogSchema)} />
    <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />
  </Fragment>

  <section class="bg-primary text-white py-12 md:py-16">
    <div class="max-w-6xl mx-auto px-4 sm:px-6">
      <nav class="text-sm text-white/70 mb-4" aria-label="Breadcrumb">
        <a href="/" class="hover:text-white transition">Inicio</a>
        <span class="mx-2">/</span>
        <span class="text-white">Blog</span>
      </nav>
      <h1 class="text-3xl sm:text-4xl md:text-5xl font-bold mb-3 md:mb-4">Blog</h1>
      <p class="text-lg md:text-xl text-white/80 max-w-2xl">
        Guías, consejos y noticias sobre apostillas y legalización de documentos para latinoamericanos en España.
      </p>
    </div>
  </section>

  <section class="py-12 md:py-16">
    <div class="max-w-6xl mx-auto px-4 sm:px-6">
      {posts.length === 0 ? (
        <div class="text-center py-12 md:py-16">
          <div class="w-20 h-20 mx-auto mb-6 bg-muted-light rounded-full flex items-center justify-center">
            <svg class="w-10 h-10 text-muted" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
            </svg>
          </div>
          <h2 class="text-xl md:text-2xl font-semibold text-primary mb-2">Próximamente</h2>
          <p class="text-primary/70 max-w-md mx-auto">
            Estamos preparando contenido útil sobre apostillas y documentos. Vuelve pronto para leer nuestras guías.
          </p>
        </div>
      ) : (
        <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-5 md:gap-6">
          {posts.map((post) => (
            <article class="bg-white rounded-xl border border-muted/20 overflow-hidden hover:shadow-lg transition-all duration-200 group">
              {post.data.image && (
                <a href={`/blog/${post.slug}/`} class="block aspect-video overflow-hidden">
                  <img
                    src={post.data.image}
                    alt={post.data.title}
                    class="w-full h-full object-cover group-hover:scale-105 transition duration-300"
                    loading="lazy"
                  />
                </a>
              )}
              <div class="p-5 md:p-6">
                {post.data.category && (
                  <span class="inline-block bg-accent/10 text-accent text-xs font-semibold px-2.5 py-1 rounded-md mb-3">
                    {categories.find(c => c.value === post.data.category)?.label || post.data.category}
                  </span>
                )}
                <h2 class="text-lg md:text-xl font-semibold text-primary mb-2 group-hover:text-accent transition line-clamp-2">
                  <a href={`/blog/${post.slug}/`}>{post.data.title}</a>
                </h2>
                <p class="text-primary/70 text-sm mb-4 line-clamp-2 leading-relaxed">
                  {post.data.description}
                </p>
                <div class="flex items-center justify-between text-sm">
                  <time datetime={post.data.publishedDate} class="text-primary/50">
                    {new Date(post.data.publishedDate).toLocaleDateString('es-ES', {
                      year: 'numeric',
                      month: 'short',
                      day: 'numeric',
                    })}
                  </time>
                  <a
                    href={`/blog/${post.slug}/`}
                    class="text-accent font-medium hover:underline inline-flex items-center gap-1"
                  >
                    Leer más
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                  </a>
                </div>
              </div>
            </article>
          ))}
        </div>
      )}
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-12 md:py-16 bg-muted-light">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 text-center">
      <h2 class="text-2xl md:text-3xl font-bold text-primary mb-3 md:mb-4">
        ¿Necesitas apostillar tus documentos?
      </h2>
      <p class="text-primary/70 mb-6 md:mb-8 max-w-2xl mx-auto">
        Gestionamos la apostilla de tus documentos latinoamericanos de forma rápida y segura, sin que tengas que volver a tu país.
      </p>
      <a href="/#contacto" class="btn btn-primary btn-lg">
        Solicitar presupuesto gratis
      </a>
    </div>
  </section>
</BaseLayout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
