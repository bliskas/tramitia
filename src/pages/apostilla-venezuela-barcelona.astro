  deliveryTime: 'P15D/P30D',
  slug: 'apostilla-venezuela-barcelona',
});

const faqSchema = getFAQSchema(faqs);

const breadcrumbSchema = getBreadcrumbSchema([
  { name: 'Inicio', url: '/' },
  { name: 'Apostilla Venezuela', url: '/apostilla-venezuela/' },
  { name: 'Venezuela en Barcelona', url: '/apostilla-venezuela-barcelona/' },
