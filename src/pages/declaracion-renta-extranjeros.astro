  </section>

  <!-- Trust indicators -->
  <section class="py-5 md:py-6 border-b border-muted/20 bg-muted-light">
    <div class="max-w-6xl mx-auto px-4 sm:px-6">
      <div class="flex flex-wrap justify-center items-center gap-4 sm:gap-6 md:gap-10 text-primary/70">
        <div class="flex items-center gap-2.5">
