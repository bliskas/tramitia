    <div class="max-w-6xl mx-auto px-4 sm:px-6">
      <div class="text-center mb-10 md:mb-14">
        <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold text-primary mb-3 md:mb-4">
          Documentos que gestionamos
        </h2>
        <p class="text-lg md:text-xl text-primary/70 max-w-3xl mx-auto">
          Obtención, apostilla y envío a España desde cualquiera de nuestros 6 países
        </p>
      </div>

      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-5 md:gap-6">
        <!-- Partida de nacimiento -->
        <a href="/partida-nacimiento/" class="block bg-white rounded-2xl border border-muted/30 shadow-sm p-6 card-hover group">
          <div class="flex items-start gap-4">
            <div class="w-12 h-12 bg-accent/10 rounded-xl flex items-center justify-center flex-shrink-0">
              <svg class="w-6 h-6 text-accent" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" d="M15 9h3.75M15 12h3.75M15 15h3.75M4.5 19.5h15a2.25 2.25 0 002.25-2.25V6.75A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25v10.5A2.25 2.25 0 004.5 19.5zm6-10.125a1.875 1.875 0 11-3.75 0 1.875 1.875 0 013.75 0zm1.294 6.336a6.721 6.721 0 01-3.17.789 6.721 6.721 0 01-3.168-.789 3.376 3.376 0 016.338 0z" />
              </svg>
