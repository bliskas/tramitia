---
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Próximamente | Tramitia',
  description = 'Esta sección estará disponible próximamente. Tramitia - Apostillas de documentos latinoamericanos desde España.'
} = Astro.props;

const siteUrl = 'https://tramitia.es';
const canonicalUrl = new URL(Astro.url.pathname, siteUrl).href;
---

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{title}</title>
  <meta name="description" content={description} />
  <meta name="robots" content="noindex, nofollow" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <meta name="theme-color" content="#ed5823" />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
</head>
<body class="bg-gradient-to-br from-primary to-primary-700 min-h-screen flex items-center justify-center text-white antialiased">
  <div class="max-w-lg mx-auto px-4 sm:px-6 py-12 text-center">
    <!-- Logo -->
    <a href="/" class="inline-block mb-8" aria-label="Tramitia - Inicio">
      <img src="/logo.svg" alt="Tramitia - Apostilla de documentos latinoamericanos" class="h-8 md:h-9 w-auto brightness-0 invert mx-auto" />
    </a>

    <!-- Icon -->
    <div class="w-20 h-20 bg-accent/20 rounded-2xl flex items-center justify-center mx-auto mb-8">
      <svg class="w-10 h-10 text-accent" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
    </div>

    <!-- Content -->
    <h1 class="text-3xl sm:text-4xl md:text-5xl font-bold mb-4">Próximamente</h1>
    <p class="text-lg md:text-xl text-white/80 mb-8 leading-relaxed">
      Estamos trabajando en esta sección. Muy pronto estará disponible.
    </p>

    <!-- CTA -->
    <div class="space-y-4">
      <a href="/#contacto" class="btn btn-primary btn-lg w-full sm:w-auto">
        Solicitar presupuesto
        <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>

      <div>
        <a href="/" class="inline-flex items-center text-white/70 hover:text-white transition py-2">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Volver al inicio
        </a>
      </div>
    </div>

  </div>
</body>
</html>
