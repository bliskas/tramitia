---
import '../styles/global.css';
import CookieBanner from '../components/CookieBanner.astro';

interface Props {
  title: string;
  description: string;
  image?: string;
  article?: boolean;
  publishedTime?: string;
  modifiedTime?: string;
  author?: string;
  keywords?: string[];
  canonicalUrl?: string;
  noindex?: boolean;
}

const {
  title,
  description,
  image = '/og-default.jpg',
  article = false,
  publishedTime,
  modifiedTime,
  author = 'Tramitia',
  keywords = [],
  canonicalUrl,
  noindex = false,
} = Astro.props;

const siteUrl = 'https://tramitia.es';
const currentUrl = canonicalUrl || new URL(Astro.url.pathname, siteUrl).href;
const ogImage = new URL(image, siteUrl).href;
---

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <!-- SEO Básico -->
  <title>{title}</title>
  <meta name="description" content={description} />
  {keywords.length > 0 && <meta name="keywords" content={keywords.join(', ')} />}
  <meta name="author" content={author} />
  <link rel="canonical" href={currentUrl} />
  {noindex && <meta name="robots" content="noindex, nofollow" />}

  <!-- Geo targeting para España -->
  <meta name="geo.region" content="ES" />
  <meta name="geo.placename" content="Spain" />
  <meta http-equiv="content-language" content="es-ES" />

  <!-- Hreflang para SEO internacional -->
  <link rel="alternate" hreflang="es-ES" href={currentUrl} />
  <link rel="alternate" hreflang="x-default" href={currentUrl} />

  <!-- Open Graph -->
  <meta property="og:type" content={article ? 'article' : 'website'} />
  <meta property="og:url" content={currentUrl} />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:image" content={ogImage} />
  <meta property="og:image:width" content="1200" />
  <meta property="og:image:height" content="630" />
  <meta property="og:image:alt" content={description} />
  <meta property="og:locale" content="es_ES" />
  <meta property="og:site_name" content="Tramitia" />

  {article && publishedTime && (
    <meta property="article:published_time" content={publishedTime} />
  )}
  {article && modifiedTime && (
    <meta property="article:modified_time" content={modifiedTime} />
  )}
  {article && <meta property="article:author" content={author} />}

  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content={ogImage} />

  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <link rel="manifest" href="/site.webmanifest" />
  <meta name="theme-color" content="#ed5823" />

  <!-- Preconnect para performance -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

  <!-- Font -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />

  <!-- Schema.org JSON-LD (se inyecta desde cada página) -->
  <slot name="schema" />

  <!-- Cloudflare Turnstile (anti-spam para formularios) -->
  <script src="https://challenges.cloudflare.com/turnstile/v0/api.js" async defer></script>
</head>
<body class="bg-white text-primary antialiased">
  <header class="sticky top-0 z-50 bg-white/95 backdrop-blur-md border-b border-muted/20 shadow-sm">
    <nav class="max-w-6xl mx-auto px-4 sm:px-6 h-16 md:h-20 flex items-center justify-between">
      <!-- Logo with consistent sizing -->
      <a href="/" class="flex items-center flex-shrink-0" aria-label="Tramitia - Inicio">
        <img src="/logo.svg" alt="Tramitia - Apostilla de documentos latinoamericanos" class="h-9 md:h-10 w-auto" />
      </a>

      <!-- Desktop navigation -->
      <div class="hidden md:flex items-center gap-2">
        <div class="relative group">
          <button class="btn btn-ghost btn-sm inline-flex items-center gap-1" aria-haspopup="true" aria-expanded="false">
            Apostillas
            <svg class="w-4 h-4 transition-transform group-hover:rotate-180" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
            </svg>
          </button>
          <div class="absolute top-full left-0 mt-1 w-56 bg-white border border-muted/20 rounded-xl shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50">
            <div class="py-2">
              <a href="/apostilla-venezuela/" class="block px-4 py-2.5 text-sm text-primary hover:bg-muted-light hover:text-accent transition">Venezuela</a>
              <a href="/apostilla-argentina/" class="block px-4 py-2.5 text-sm text-primary hover:bg-muted-light hover:text-accent transition">Argentina</a>
              <a href="/apostilla-colombia/" class="block px-4 py-2.5 text-sm text-primary hover:bg-muted-light hover:text-accent transition">Colombia</a>
              <a href="/apostilla-ecuador/" class="block px-4 py-2.5 text-sm text-primary hover:bg-muted-light hover:text-accent transition">Ecuador</a>
              <a href="/apostilla-peru/" class="block px-4 py-2.5 text-sm text-primary hover:bg-muted-light hover:text-accent transition">Perú</a>
              <a href="/apostilla-bolivia/" class="block px-4 py-2.5 text-sm text-primary hover:bg-muted-light hover:text-accent transition">Bolivia</a>
            </div>
          </div>
        </div>
        <div class="relative group">
          <button class="btn btn-ghost btn-sm inline-flex items-center gap-1" aria-haspopup="true" aria-expanded="false">
            Servicios
            <svg class="w-4 h-4 transition-transform group-hover:rotate-180" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
            </svg>
          </button>
          <div class="absolute top-full left-0 mt-1 w-64 bg-white border border-muted/20 rounded-xl shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50">
            <div class="py-2">
              <a href="/nacionalidad-espanola-tramites/" class="block px-4 py-2.5 text-sm text-primary hover:bg-muted-light hover:text-accent transition">Nacionalidad española</a>
              <a href="/residencia-y-permisos-online/" class="block px-4 py-2.5 text-sm text-primary hover:bg-muted-light hover:text-accent transition">Residencia y permisos</a>
              <a href="/declaracion-renta-extranjeros/" class="block px-4 py-2.5 text-sm text-primary hover:bg-muted-light hover:text-accent transition">Declaración de la renta</a>
              <a href="/gestoria-tributaria/" class="block px-4 py-2.5 text-sm text-primary hover:bg-muted-light hover:text-accent transition">Gestoría tributaria</a>
              <a href="/asesoria-contable-autonomos/" class="block px-4 py-2.5 text-sm text-primary hover:bg-muted-light hover:text-accent transition">Asesoría contable</a>
            </div>
          </div>
        </div>
        <a href="/blog/" class="btn btn-ghost btn-sm">
          Blog
        </a>
        <a href="/#contacto" class="btn btn-primary btn-md">
          Solicitar presupuesto
        </a>
      </div>

      <!-- Mobile menu button - 44px touch target -->
      <button
        class="md:hidden flex items-center justify-center w-11 h-11 -mr-2 rounded-lg text-primary hover:bg-muted-light transition touch-target"
        aria-label="Abrir menú de navegación"
        aria-expanded="false"
        aria-controls="mobile-menu"
        id="mobile-menu-btn"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </nav>

    <!-- Mobile menu with improved touch targets -->
    <div class="hidden md:hidden border-t border-muted/20 bg-white" id="mobile-menu">
      <div class="px-4 py-4 space-y-3">
        <p class="text-xs font-semibold text-primary/50 uppercase tracking-wide px-3 pt-1">Apostillas</p>
        <div class="grid grid-cols-2 gap-1">
          <a href="/apostilla-venezuela/" class="btn btn-ghost btn-sm justify-center text-sm">Venezuela</a>
          <a href="/apostilla-argentina/" class="btn btn-ghost btn-sm justify-center text-sm">Argentina</a>
          <a href="/apostilla-colombia/" class="btn btn-ghost btn-sm justify-center text-sm">Colombia</a>
          <a href="/apostilla-ecuador/" class="btn btn-ghost btn-sm justify-center text-sm">Ecuador</a>
          <a href="/apostilla-peru/" class="btn btn-ghost btn-sm justify-center text-sm">Perú</a>
          <a href="/apostilla-bolivia/" class="btn btn-ghost btn-sm justify-center text-sm">Bolivia</a>
        </div>
        <p class="text-xs font-semibold text-primary/50 uppercase tracking-wide px-3 pt-2">Servicios</p>
        <div class="space-y-1">
          <a href="/nacionalidad-espanola-tramites/" class="btn btn-ghost btn-sm w-full justify-start text-sm">Nacionalidad española</a>
          <a href="/residencia-y-permisos-online/" class="btn btn-ghost btn-sm w-full justify-start text-sm">Residencia y permisos</a>
          <a href="/declaracion-renta-extranjeros/" class="btn btn-ghost btn-sm w-full justify-start text-sm">Declaración de la renta</a>
          <a href="/gestoria-tributaria/" class="btn btn-ghost btn-sm w-full justify-start text-sm">Gestoría tributaria</a>
          <a href="/asesoria-contable-autonomos/" class="btn btn-ghost btn-sm w-full justify-start text-sm">Asesoría contable</a>
        </div>
        <a href="/blog/" class="btn btn-ghost btn-md w-full justify-center">
          Blog
        </a>
        <a href="/#contacto" class="btn btn-primary btn-md w-full justify-center">
          Solicitar presupuesto
        </a>
      </div>
    </div>
  </header>

  <main>
    <slot />
  </main>

  <footer class="bg-primary text-white/80 mt-16 md:mt-24">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 py-12 md:py-16">
      <div class="grid md:grid-cols-4 gap-10 md:gap-8">
        <!-- Brand column -->
        <div>
          <div class="mb-6">
            <img src="/logo.svg" alt="Tramitia - Trámites para latinoamericanos en España" class="h-10 w-auto brightness-0 invert" />
          </div>
          <p class="text-sm leading-relaxed mb-6">
            Apostillas, residencia, nacionalidad y asesoría fiscal para tu vida en España.
          </p>
          <a href="/#contacto" class="btn btn-primary btn-sm">
            Solicitar presupuesto
          </a>
        </div>

        <!-- Apostillas column -->
        <div>
          <h4 class="text-white font-semibold mb-4 text-sm uppercase tracking-wide">Apostillas</h4>
          <ul class="space-y-3">
            <li><a href="/apostilla-venezuela/" class="text-sm hover:text-accent transition py-1 inline-block">Venezuela</a></li>
            <li><a href="/apostilla-argentina/" class="text-sm hover:text-accent transition py-1 inline-block">Argentina</a></li>
            <li><a href="/apostilla-colombia/" class="text-sm hover:text-accent transition py-1 inline-block">Colombia</a></li>
            <li><a href="/apostilla-ecuador/" class="text-sm hover:text-accent transition py-1 inline-block">Ecuador</a></li>
            <li><a href="/apostilla-peru/" class="text-sm hover:text-accent transition py-1 inline-block">Perú</a></li>
            <li><a href="/apostilla-bolivia/" class="text-sm hover:text-accent transition py-1 inline-block">Bolivia</a></li>
          </ul>
        </div>

        <!-- Servicios column -->
        <div>
          <h4 class="text-white font-semibold mb-4 text-sm uppercase tracking-wide">Servicios</h4>
          <ul class="space-y-3">
            <li><a href="/nacionalidad-espanola-tramites/" class="text-sm hover:text-accent transition py-1 inline-block">Nacionalidad española</a></li>
            <li><a href="/residencia-y-permisos-online/" class="text-sm hover:text-accent transition py-1 inline-block">Residencia y permisos</a></li>
            <li><a href="/declaracion-renta-extranjeros/" class="text-sm hover:text-accent transition py-1 inline-block">Declaración de la renta</a></li>
            <li><a href="/gestoria-tributaria/" class="text-sm hover:text-accent transition py-1 inline-block">Gestoría tributaria</a></li>
            <li><a href="/asesoria-contable-autonomos/" class="text-sm hover:text-accent transition py-1 inline-block">Asesoría contable</a></li>
          </ul>
        </div>

        <!-- Recursos + Contacto column -->
        <div>
          <h4 class="text-white font-semibold mb-4 text-sm uppercase tracking-wide">Recursos</h4>
          <ul class="space-y-3">
            <li>
              <a href="/blog/" class="text-sm hover:text-accent transition inline-flex items-center gap-2 py-1">
                Blog
              </a>
            </li>
            <li>
              <a href="mailto:hola@tramitia.es" class="text-sm hover:text-accent transition inline-flex items-center gap-2 py-1">
                <svg class="w-4 h-4 flex-shrink-0" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
                </svg>
                hola@tramitia.es
              </a>
            </li>
          </ul>
        </div>
      </div>

      <!-- Bottom bar -->
      <div class="border-t border-white/10 mt-10 pt-8 flex flex-col md:flex-row justify-between items-center gap-4">
        <p class="text-sm text-white/60">&copy; {new Date().getFullYear()} Tramitia. Todos los derechos reservados.</p>
        <div class="flex flex-wrap justify-center gap-x-6 gap-y-2 text-sm">
          <a href="/aviso-legal/" class="text-white/60 hover:text-accent transition py-1">Aviso legal</a>
          <a href="/politica-privacidad/" class="text-white/60 hover:text-accent transition py-1">Privacidad</a>
          <a href="/politica-cookies/" class="text-white/60 hover:text-accent transition py-1">Cookies</a>
          <button data-cookie-settings class="text-white/60 hover:text-accent transition underline underline-offset-2 py-1">Configurar cookies</button>
        </div>
      </div>
    </div>
  </footer>

  <!-- Cookie Banner -->
  <CookieBanner />

  <!-- Mobile menu toggle script -->
  <script>
    const menuBtn = document.getElementById('mobile-menu-btn');
    const mobileMenu = document.getElementById('mobile-menu');

    menuBtn?.addEventListener('click', () => {
      mobileMenu?.classList.toggle('hidden');
    });
  </script>
</body>
</html>
